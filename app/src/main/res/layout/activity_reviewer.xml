<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ReviewerActivity">

    <ImageView
        android:layout_width="401dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/reviewer" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="0"
        android:stretchColumns="1"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="220dp">

        <TableRow>

            <TextView
                android:id="@+id/Student"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:ellipsize="end"
                android:gravity="right"
                android:singleLine="true"
                android:text="Conference ID:"
                android:textColorHighlight="#151515"
                android:textColorLink="#121111"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cid"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:ellipsize="none"
                android:gravity="left"
                android:singleLine="true"
                android:text="ID"
                android:textColorHighlight="#151515"
                android:textColorLink="#121111"
                android:textSize="18sp"
                android:textStyle="italic|bold" />
        </TableRow>

        <TableRow>

        <TextView
            android:id="@+id/wcname"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text="Conference Name:"
            android:textColorHighlight="#151515"
            android:textColorLink="#121111"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cname"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:ellipsize="none"
            android:gravity="left"
            android:singleLine="true"
            android:text="Name"
            android:textColorHighlight="#151515"
            android:textColorLink="#121111"
            android:textSize="18sp"
            android:textStyle="italic|bold" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/students"
        android:layout_width="419dp"
        android:layout_height="411dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:padding="10dp">

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="850dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <Button
        android:id="@+id/button_notify"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="750dp"
        android:background="#2196F3"
        android:text="Notify Orgniser"
        android:textColor="#ffffff" />

    <TextView
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/textview_back"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Logout?"
        android:layout_marginTop="10dp"/>

    </LinearLayout>

</FrameLayout>